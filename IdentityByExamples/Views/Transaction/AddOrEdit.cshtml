@model IdentityByExamples.Models.Transaction


@{
    ViewData["Title"] = "rent";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>rent</h1>
        <form asp-action="AddOrEdit" autocomplete="off">
         
            <input type="hidden" asp-for="TransactionId" />
           
            <div class="form-group">
                <label asp-for="RENT" class="control-label"></label>
                <input asp-for="RENT" class="form-control" />
             
            </div>
            <div class="form-group">
                <label asp-for="ADDRESS" class="control-label"></label>
                <input asp-for="ADDRESS" class="form-control" />
               
            </div>
          
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ROOM" class="control-label"></label>
                    <input asp-for="ROOM" class="form-control" />
                   
                    </div>
                </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="BATHROOM" class="control-label"></label>
                    <input asp-for="BATHROOM" class="form-control" />
                    <span asp-validation-for="BATHROOM" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="file" name="image" accept="image/*" capture="camera" />
                <input type="submit" value="Upload Image" />
            </div>
           
            

            <div class="row mt-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary w-100" />
                    </div>
                </div>
                <div class="col-md-6">
                    <a asp-action="Index" class="btn btn-secondary  w-100">View All</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
